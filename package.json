{
  "name": "sandpaper",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "pnpm --filter @sandpaper/desktop dev",
    "build:desktop": "pnpm --filter @sandpaper/desktop build",
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "test": "pnpm -r --if-present test",
    "test:watch": "pnpm -r --if-present test:watch",
    "test:ui": "pnpm --filter @sandpaper/desktop test:ui",
    "tauri:dev": "pnpm --filter @sandpaper/desktop tauri dev",
    "tauri:build": "pnpm --filter @sandpaper/desktop tauri build"
  }
}
